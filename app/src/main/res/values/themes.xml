<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TouchBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorAccent">@color/teal_200</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- List divider -->
        <item name="android:listDivider">@color/gray</item>
        <!-- Action Mode -->
        <item name="android:actionModeStyle">@style/Theme.TouchBlue.PopupOverlay</item>
        <!-- Testing context menu, WIP -->
        <item name="textAppearanceLargePopupMenu">@style/Theme.TouchBlue.ContextMenu.TextAppearance</item>
        <item name="textAppearanceSmallPopupMenu">@style/Theme.TouchBlue.ContextMenu.TextAppearance</item>
    </style>

    <style name="Theme.TouchBlue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TouchBlue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TouchBlue.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TouchBlue.ContextMenu.TextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>